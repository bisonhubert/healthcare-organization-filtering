<h3 class="section_heading">Filters</h3>
  <%= form_tag(organizations_path, method: :get) do %>
    <div class="filter_form">
      <% Eligibility.all.each do |eligibility| %>
        <div class="filter_type">
          <%= check_box_tag("eligibilities[]", eligibility.name, false, :id => eligibility.id, class: "check_box" ) %>
          <%= label_tag eligibility.id, eligibility.name, class: "filter_label" %>
        </div>
      <% end %>
      <div class="form_options_wrapper">
        <span class="form_options">
          <%= radio_button_tag("query_type", "inclusive", true) %>
          <%= label_tag "query_type_inclusive", "Apply Any" %>
        </span>
        <span class="form_options">
          <%= radio_button_tag("query_type", "exclusive", false) %>
          <%= label_tag "query_type_exclusive", "Apply All" %>
        </span>
      </div>
      <div class="form_submit">
        <%= submit_tag("Apply Filter", id: "form_submit") %>
      </div>
    </div>
  <% end %>